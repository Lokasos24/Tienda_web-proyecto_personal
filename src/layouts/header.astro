---
import { IsLogged } from "../components/isLogged";
---

<header
    class="sticked w-full top-0 z-50 bg-white/90 backdrop-blur-md shadow-sm border-b border-gray-100 transition-all duration-300"
>
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="flex justify-between items-center h-20">
            <div
                class="shrink-0 flex items-center cursor-pointer"
                onclick="window.location.href='/'"
            >
                <h1
                    class="text-2xl font-bold bg-linear-to-r from-blue-600 to-blue-800 bg-clip-text text-transparent tracking-tight"
                >
                    Proyecto personal
                </h1>
            </div>
            <nav class="hidden md:flex space-x-8 items-center">
                <a
                    href="/"
                    class="text-gray-600 hover:text-blue-600 font-medium transition-colors duration-200 text-sm uppercase tracking-wide"
                    >Inicio</a
                >
                <a
                    href="/nosotros"
                    class="text-gray-600 hover:text-blue-600 font-medium transition-colors duration-200 text-sm uppercase tracking-wide"
                    >Nosotros</a
                >
                <a
                    href="/productos"
                    class="text-gray-600 hover:text-blue-600 font-medium transition-colors duration-200 text-sm uppercase tracking-wide"
                    >Productos</a
                >
                <a
                    href="/contacto"
                    class="text-gray-600 hover:text-blue-600 font-medium transition-colors duration-200 text-sm uppercase tracking-wide"
                    >Contacto</a
                >
            </nav>
            <div class="flex items-center space-x-4">
                <div class="hidden md:block">
                    <IsLogged client:load />
                </div>
                <button
                    id="mobile-menu-btn"
                    class="md:hidden p-2 rounded-md text-gray-600 hover:text-blue-600 hover:bg-gray-100 focus:outline-none focus:ring-2 focus:ring-inset focus:ring-blue-500"
                >
                    <span class="sr-only">Abrir men√∫ principal</span>
                    <svg
                        class="h-6 w-6 block"
                        id="icon-menu"
                        xmlns="http://www.w3.org/2000/svg"
                        fill="none"
                        viewBox="0 0 24 24"
                        stroke="currentColor"
                        aria-hidden="true"
                    >
                        <path
                            stroke-linecap="round"
                            stroke-linejoin="round"
                            stroke-width="2"
                            d="M4 6h16M4 12h16M4 18h16"></path>
                    </svg>
                    <svg
                        class="h-6 w-6 hidden"
                        id="icon-close"
                        xmlns="http://www.w3.org/2000/svg"
                        fill="none"
                        viewBox="0 0 24 24"
                        stroke="currentColor"
                        aria-hidden="true"
                    >
                        <path
                            stroke-linecap="round"
                            stroke-linejoin="round"
                            stroke-width="2"
                            d="M6 18L18 6M6 6l12 12"></path>
                    </svg>
                </button>
            </div>
        </div>
    </div>
    <div
        id="mobile-menu"
        class="hidden md:hidden bg-white border-t border-gray-100 absolute w-full"
    >
        <div class="px-2 pt-2 pb-3 space-y-1 sm:px-3 shadow-lg">
            <a
                href="/"
                class="block px-3 py-2 rounded-md text-base font-medium text-gray-700 hover:text-blue-600 hover:bg-gray-50 transition-colors"
                >Inicio</a
            >
            <a
                href="/nosotros"
                class="block px-3 py-2 rounded-md text-base font-medium text-gray-700 hover:text-blue-600 hover:bg-gray-50 transition-colors"
                >Nosotros</a
            >
            <a
                href="/productos"
                class="block px-3 py-2 rounded-md text-base font-medium text-gray-700 hover:text-blue-600 hover:bg-gray-50 transition-colors"
                >Productos</a
            >
            <a
                href="/contacto"
                class="block px-3 py-2 rounded-md text-base font-medium text-gray-700 hover:text-blue-600 hover:bg-gray-50 transition-colors"
                >Contacto</a
            >
            <div class="px-3 py-2">
                <IsLogged client:load />
            </div>
        </div>
    </div>
</header>

<script>
    const btn = document.getElementById("mobile-menu-btn");
    const menu = document.getElementById("mobile-menu");
    const iconMenu = document.getElementById("icon-menu");
    const iconClose = document.getElementById("icon-close");

    if (btn && menu && iconMenu && iconClose) {
        btn.addEventListener("click", () => {
            menu.classList.toggle("hidden");
            iconMenu.classList.toggle("hidden");
            iconClose.classList.toggle("hidden");
        });
    }
</script>
